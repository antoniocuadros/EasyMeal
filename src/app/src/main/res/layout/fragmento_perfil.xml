<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.Fragmentoperfil"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    >
<LinearLayout
    android:id="@+id/login"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@drawable/inputdecorado"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/input_usuario"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@drawable/inputdecorado"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/input_contraseña"
        />



        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Iniciar Sesión"
            android:layout_marginTop="10dp"
            app:cornerRadius="30dp"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp"
            android:backgroundTint="@color/black"
            />


</LinearLayout>

<LinearLayout
    android:visibility="gone"
    android:id="@+id/perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/carta_imagen"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:foregroundGravity="center"
        app:cardCornerRadius="600dp">

        <ImageView
            android:id="@+id/imagen_usuario"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nombre_usuario"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/black"
        android:foregroundGravity="center"
        app:cardCornerRadius="600dp"
        android:elevation="100dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add" />
    </androidx.cardview.widget.CardView>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/slider_mis_recetas"
        android:layout_gravity="center"
        />

    <me.relex.circleindicator.CircleIndicator3
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/indicador_slider"
        />
</LinearLayout>


</LinearLayout>